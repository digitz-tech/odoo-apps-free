<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_category_view_form" model="ir.ui.view">
        <field name="name">project.category.view.form.inherit</field>
        <field name="model">project.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="active" invisible="1"/>
                        <field name="user_ids" widget="many2many_tags"/>
                        <field name="stage_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Task">
                        <field name="task_ids" colspan="2" nolabel="1">
                            <tree editable="bottom">
                                <field name="priority" widget="priority"/>
                                <field name="name" required="1"/>
                                <field name="description"/>
                                <field name="user_ids" widget="many2many_tags"/>
                                <field name="stage_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_category" model="ir.actions.act_window">
        <field name="name">Project Category</field>
        <field name="res_model">project.category</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
