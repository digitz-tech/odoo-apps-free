<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="category_project_project_view_form" model="ir.ui.view">
        <field name="name">category.project.project.view.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <xpath expr="//form/div[hasclass('oe_title')]" position="after">
                <label for="category_id" string="Category"/>
                <h2>
                    <field name="category_id"/>
                </h2>
            </xpath>
        </field>
    </record>

    <menuitem id="project_category_sub_menu" name="Project Category" sequence="5"
              action="dgz_project_default_task.action_project_category"
              parent="project.menu_project_config"/>
</odoo>
